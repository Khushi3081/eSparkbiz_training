generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model user {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String?
  candidate role? @relation(fields:[role_id],references:[id])
  role_id     Int? 
}

model role{
  id      Int @id @default(autoincrement())
  name    String
  users user[]
}